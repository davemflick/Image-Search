extends layout

block content
	h1.homeHeader Image Search
	.ui.segment.searchForm
		form(action="/", method="POST").ui.form
			.field
				label Seach Term
				input(type="text", name="searchTerm", placeholder="Image Description")
			.field
				label Pagination
				input(type="number", name="paginate", value="10")
			button(type="submit").ui.blue.button Search

	.ui.segment.others
		a(href="/api/recentsearches").ui.orange.button Search History
		h3.about About App
		p This app uses Google's Custom Search API to retrieve a JSON object containing image urls that best match the keyword used in the search. You can set the pagination to play around with different sets of results. Click the 'Search History' button to find previous searches and dates they occured. 